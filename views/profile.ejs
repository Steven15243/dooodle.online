<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6213487904045270"
    crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= username %>'s Profile</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div id="app">
        <header>
            <h1><%= username %>'s Profile</h1>
        </header>

        <main>
            <div id="profile-info">
                <h2>Username: <%= username %></h2>
                <p>Bio: <%= bio %></p>
                <p>Total Likes: <%= likes %></p>
                <% if (characterUrl) { %>
                    <div id="character-preview">
                        <img src="<%= characterUrl %>" alt="Character">
                    </div>
                <% } %>
            </div>
        </main>

        <footer>
            <a href="/">Back to Home</a>
        </footer>
    </div>
</body>
</html>
